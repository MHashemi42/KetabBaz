@page "/books/{bookId:int}"
@model KetabBaz.Web.Pages.BookModel

<div class="row mx-1">

    <div class="card border border-2 rounded mb-1">
        <div class="row g-0">
            <div class="col-6 col-md-4 col-lg-3">
                <img src="/@Model.Book.ImageUrl" class="img-fluid rounded-start p-3"
                     alt="@Model.Book.TranslatedTitle">
            </div>
            <div class="col-6 col-md-7 col-lg-8">
                <div class="card-body">
                    <h5 class="card-title mb-3 text-center text-md-start">@Model.Book.TranslatedTitle</h5>
                    <p class="card-text d-none d-md-block">نویسنده: @Model.Book.AuthorName</p>
                    <p class="card-text d-none d-md-block">مترجم: @Model.Book.TranslatorName</p>
                    <p class="card-text d-none d-md-block">نشر: @Model.Book.PublisherTitle</p>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover d-md-none">
        <tbody>
            <tr>
                <td>نویسنده</td>
                <td>@Model.Book.AuthorName</td>
            </tr>
            <tr>
                <td>مترجم</td>
                <td>@Model.Book.TranslatorName</td>
            </tr>
            <tr>
                <td>نشر</td>
                <td>@Model.Book.PublisherTitle</td>
            </tr>
        </tbody>
    </table>

    <div class="bg-white pt-2 mb-2 border border-2 rounded">
        <h3 class="fw-normal">توضیحات کتاب @Model.Book.TranslatedTitle</h3>
        <p>@Model.Book.Description</p>
    </div>

    <div class="bg-white pt-2 border border-2 rounded">
        <h3 class="fw-normal">جزئیات کتاب</h3>
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <td>دسته بندی</td>
                    <td>
                        @string.Join(", ", Model.Book.Categories.Select(c => c.Title))
                    </td>
                </tr>
                <tr>
                    <td>نویسنده</td>
                    <td>@Model.Book.AuthorName</td>
                </tr>
                <tr>
                    <td>مترجم</td>
                    <td>@Model.Book.TranslatorName</td>
                </tr>
                <tr>
                    <td>نشر</td>
                    <td>@Model.Book.PublisherTitle</td>
                </tr>
                <tr>
                    <td>ISBN</td>
                    <td>@Model.Book.Isbn</td>
                </tr>
                <tr>
                    <td>برچسب ها</td>
                    <td>
                        @string.Join(", ", Model.Book.Tags.Select(t => t.Title))
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>