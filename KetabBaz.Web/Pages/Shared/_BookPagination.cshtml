@model (SearchBookParameters Search, int TotalPages)

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.Search.PageNumber - 1 < 1 ? "disabled" : "")"><a class="page-link" asp-all-route-data="@StringDictionryConverter.ToDictionary(Model.Search)" asp-route-pagenumber="@(Model.Search.PageNumber - 1)"><span aria-hidden="true">&laquo;</span></a></li>

        @for (int i = Model.Search.PageNumber - 2; i <= Model.Search.PageNumber - 1; i++)
        {
            <li class="page-item @(i < 1 ? "d-none" : "")"><a class="page-link" asp-all-route-data="@StringDictionryConverter.ToDictionary(Model.Search)" asp-route-pagenumber="@i">@i</a></li>
        }

        <li class="page-item active"><a class="page-link" asp-all-route-data="@StringDictionryConverter.ToDictionary(Model.Search)" >@Model.Search.PageNumber</a></li>

        @for (int i = Model.Search.PageNumber + 1; i <= Model.Search.PageNumber + 2; i++)
        {
            <li class="page-item @(i > Model.TotalPages ? "d-none" : "")"><a class="page-link" asp-all-route-data="@StringDictionryConverter.ToDictionary(Model.Search)" asp-route-pagenumber="@i">@i</a></li>
        }

        <li class="page-item @(Model.Search.PageNumber + 1 > Model.TotalPages ? "disabled" : "")"><a class="page-link" asp-all-route-data="@StringDictionryConverter.ToDictionary(Model.Search)" asp-route-pagenumber="@(Model.Search.PageNumber + 1)"><span aria-hidden="true">&raquo;</span></a></li>
    </ul>
</nav>


