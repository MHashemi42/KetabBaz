<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KetabBaz</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.rtl.min.css" integrity="sha384-beJoAY4VI2Q+5IPXjI207/ntOuaz06QYCdpWfWRv4lSFDyUSqsM0W+wiAMr2I185" crossorigin="anonymous" asp-append-version="true">
    <link rel="stylesheet" href="~/css/flickity.css" asp-append-version="true" media="screen" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-2">
            <div class="container-fluid justify-content-end">
                <a class="navbar-brand me-auto" asp-page="/Index">KetabBaz</a>
                <partial name="_LoginPartial" />
                <button class="navbar-toggler order-lg-1" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto ms-lg-3 flex-row flex-wrap my-2 my-lg-0">
                        <partial name="_AccountDropDownPartial" />
                        <li class="mb-1 nav-item col-12 col-lg-auto">
                            <a class="nav-link col-6 col-lg-auto" asp-page="Search" asp-route-sortby="1">جدیدترین ها</a>
                        </li>
                        <li class="mb-1 nav-item col-12 col-lg-auto">
                            <a class="nav-link col-6 col-lg-auto" asp-page="Search" asp-route-sortby="0">پربازدیدترین ها</a>
                        </li>
                        <vc:category-drop-down></vc:category-drop-down>
                    </ul>
                    <ul class="navbar-nav ms-auto me-lg-3 flex-row flex-wrap mb-0">
                        <partial name="_SearchBarPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="mt-4 pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bd-footer pt-4 pb-5 mt-5 bg-light">
        <div class="container pt-4 pb-5">
            <div class="row">
                <div class="col-lg-4 mb-3">
                    <a class="d-inline-flex align-items-center mb-2 link-primary text-decoration-none" href="/" aria-label="Bootstrap">
