@model CarouselViewModel
@{
	var count = 0;
}
<div class="row">
	<div class="col-md-8 mb-md-2 mb-3">
		<div id="carousel" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner">
				@foreach (var item in Model.MainCarousels)
				{
					<div class="carousel-item @(++count == 1 ? "active" : "")">
						<a href="@item.Url">
							<img src="@item.ImageUrl" class="d-block w-100 rounded" alt="...">
						</a>
					</div>
				}
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</div>
	<div class="col-md-4">
		@foreach (var item in Model.SideCarousels)
		{
			<div class="mb-md-2 mb-3">
				<a href="@item.Url">
					<img src="@item.ImageUrl" class="d-block w-100 rounded" alt="...">
				</a>
			</div>
		}
	</div>
</div>