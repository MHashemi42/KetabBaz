@page
@model KetabBaz.Web.Pages.Account.RegisterModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "ثبت نام";
}

<form method="post">
    <div class="mb-3">
        <label asp-for="UserRegistration.UserName" class="form-label"></label>
        <input asp-for="UserRegistration.UserName" class="form-control" />
        <span asp-validation-for="UserRegistration.UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UserRegistration.Email" class="form-label"></label>
        <input asp-for="UserRegistration.Email" class="form-control" />
        <span asp-validation-for="UserRegistration.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UserRegistration.Password" class="form-label"></label>
        <input asp-for="UserRegistration.Password" class="form-control" />
        <span asp-validation-for="UserRegistration.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UserRegistration.ConfirmPassword" class="form-label"></label>
        <input asp-for="UserRegistration.ConfirmPassword" class="form-control" />
        <span asp-validation-for="UserRegistration.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="mb-1">
        <button type="submit" class="btn btn-success mb-3">ثبت نام</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}