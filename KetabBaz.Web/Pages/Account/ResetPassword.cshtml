@page
@model KetabBaz.Web.Pages.Account.ResetPasswordModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "بازنشانی رمزعبور";
}

<h1 class="text-center fs-3">@ViewData["Title"]</h1>
<form method="post">
    <input type="hidden" asp-for="ResetPassword.Token"/>
    <input type="hidden" asp-for="ResetPassword.Email"/>
    <div class="mb-3">
        <label asp-for="ResetPassword.Password" class="form-label"></label>
        <input asp-for="ResetPassword.Password" class="form-control" />
        <span asp-validation-for="ResetPassword.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ResetPassword.ConfirmPassword" class="form-label"></label>
        <input asp-for="ResetPassword.ConfirmPassword" class="form-control" />
        <span asp-validation-for="ResetPassword.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="mb-1">
        <button type="submit" class="btn btn-success mb-3">ثبت</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
